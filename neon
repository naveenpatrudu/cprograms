#include<stdio.h>
int main()
{

    int i, temp, a,sum=0;
    printf("Enter Number: ");
    scanf("%d",&i);
    a =  i * i ;
    while(a!=0)
    {
        temp = a%10;
        sum =sum + temp; 
        a =a / 10; 
    }
    if(sum == i)
        printf("%d is a neon number",i);
    else
        printf("%d is NOT a neon number",i);
}
